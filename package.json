{
	"name": "vscode-chrome-debug-core",
	"displayName": "vscode-chrome-debug-core",
	"description": "A library for building VS Code debug adapters for targets that support the Chrome Remote Debug Protocol",
	"main": "./out/src/index",
	"typings": "./lib/src/index.d.ts",
	"scripts": {
		"build": "gulp build",
		"major": "npm version major -m '%s'",
		"minor": "npm version minor -m '%s'",
		"patch": "npm version patch -m '%s'",
		"prepare": "gulp build",
		"testCoverage": "nyc mocha --require source-map-support/register  --exit --recursive -u tdd ./out/test/**/*.test.js"
	},
	"nyc": {
		"all": true,
		"exclude": [
			"**/*.d.ts",
			"**/coverage/**/*.*",
			"**/testData/**/*.*"
		],
		"extension": [
			".ts"
		],
		"reporter": "html"
	},
	"dependencies": {
		"@types/source-map": "0.5.2",
		"color": "4.2.3",
		"devtools-protocol": "0.0.1327118",
		"glob": "11.0.0",
		"noice-json-rpc": "1.2.0",
		"source-map": "0.8.0-beta.0",
		"ws": "8.18.0"
	},
	"devDependencies": {
		"@types/color": "3.0.6",
		"@types/glob": "8.1.0",
		"@types/minimatch": "5.1.2",
		"@types/mockery": "1.4.33",
		"@types/node": "20.14.11",
		"@types/ws": "8.5.11",
		"del": "7.1.0",
		"event-stream": "4.0.1",
		"merge2": "1.4.1",
		"minimist": "1.2.8",
		"mockery": "2.1.0",
		"nyc": "17.0.0",
		"source-map-support": "0.5.21",
		"typemoq": "2.1.0"
	}
}
